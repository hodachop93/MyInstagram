<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/quickReturnHomeActivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tab_indicator">

        <TextView
            style="@style/style_label_actionbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVITY"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <example.com.hop.myinstagram.utils.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"></example.com.hop.myinstagram.utils.SlidingTabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></android.support.v4.view.ViewPager>
    </LinearLayout>
</LinearLayout>